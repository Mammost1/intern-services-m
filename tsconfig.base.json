{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@internship/authorization": ["libs/authorization/src/index.ts"],
      "@internship/config": ["libs/config/src/index.ts"],
      "@internship/databases": ["libs/databases/src/index.ts"],
      "@internship/exception-filter": ["libs/exception-filter/src/index.ts"],
      "@internship/nest-request-id": ["libs/nest-request-id/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
